@using LoginProjectDomain.ViewModels
@model IEnumerable<HostInfoViewModel>

@{

    ViewData["Title"] = "HostInfoList";

}
@if(Model != null && Model.Any()) {


<section class="section bg-light" id="pricing">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="text-center mb-5">
                    <h3 class="title mb-3">برنامه خود را انتخاب کنید</h3>
                    <p class="text-muted font-size-15">و در واقع تمایز این چیزها آسان و مصلحت است، زیرا زمانی که ما وقت آزاد داریم، انتخاب می کنیم که چه چیزی را انتخاب کنیم.</p>
                </div>
            </div>
        </div>
        <div class="row">

            @foreach (var item in Model)
            {
                <div class="col-lg-4">
                    <div class="pricing-box rounded text-center p-4">
                        <div class="pricing-icon-bg my-4"><i class="mdi mdi-account h1"></i></div>
                        <h4 class="title mb-3">@item.Name</h4>
                        <h1 class="fw-bold mb-0"><b><sup class="h4 me-2 fw-bold">$</sup>@item.Price</b></h1>
                        <p class="text-muted font-weight-semibold">کاربر / ماه</p>
                        <ul class="list-unstyled pricing-item mb-4">
                            <li class="text-muted">پهنای باند: @item.BandWidth گیگابایت</li>
                            <li class="text-muted">فضای آنلاین: @item.OnlineSpace مگابایت</li>
                            <li class="text-muted">پشتیبانی: @item.Support</li>
                        </ul>
                        <a href="#" class="btn btn-outline-primary pr-btn">هم اکنون خریداری کنید</a>

                        <div class="mt-4"><div class="hero-bottom-img"><img src="~/Theme/images/pricing-bottom-bg.png" alt="" class="img-fluid d-block mx-auto"></div></div>
                    </div>
                </div>
            }

        </div>
    </div>
    </section>

}
else
{
    <p>داده ای موجود نیست</p>
}

